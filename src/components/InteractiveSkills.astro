---
// Define the type for color keys
type ColorKey = "blue" | "purple" | "green" | "gray" | "white";

type SkillCategory = {
  id: string;
  name: string;
  color: ColorKey;
  skills: Array<{ name: string; icon: string }>;
};

const skillCategories: SkillCategory[] = [
  {
    id: "lenguajes",
    name: "Lenguajes",
    color: "blue",
    skills: [
      { name: "Python", icon: "python" },
      { name: "Java", icon: "openjdk" },
      { name: "C/C++", icon: "cplusplus" },
    ],
  },
  {
    id: "web",
    name: "Desarrollo Web",
    color: "purple",
    skills: [
      { name: "NextJS", icon: "nextdotjs" },
      { name: "Angular", icon: "angular" },
      { name: "HTML5", icon: "html5" },
      { name: "Tailwind", icon: "tailwindcss" },
      { name: ".NET", icon: "dotnet" },
      { name: "C#", icon: "csharp" },
      { name: "JavaScript", icon: "javascript" },
      { name: "PHP", icon: "php" },
      { name: "Astro", icon: "astro" },
    ],
  },
  {
    id: "devops",
    name: "Herramientas & DevOps",
    color: "green",
    skills: [
      { name: "TensorFlow", icon: "tensorflow" },
      { name: "Keras", icon: "keras" },
      { name: "NumPy", icon: "numpy" },
      { name: "Pandas", icon: "pandas" },
      { name: "Scikit-learn", icon: "scikitlearn" },
      { name: "Deep Learning", icon: "openai" },
      { name: "Computer Vision", icon: "opencv" },
      { name: "Linux", icon: "linux" },
      { name: "Bash", icon: "gnubash" },
      { name: "SQL", icon: "postgresql" },
      { name: "MySQL", icon: "mysql" },
      { name: "Git", icon: "git" },
      { name: "GitHub", icon: "github" },
      { name: "Splunk", icon: "splunk" },
      { name: "Chronicle", icon: "googlecloud" },
      { name: "Wireshark", icon: "wireshark" },
      { name: "NIST Framework", icon: "securityscorecard" },
      { name: "Network Security", icon: "kalilinux" },
    ],
  },
  {
    id: "idiomas",
    name: "Idiomas",
    color: "gray",
    skills: [
      { name: "Español (Nativo)", icon: "googletranslate" },
      { name: "Inglés (Técnico A2/B1)", icon: "googletranslate" },
    ],
  },
];

const colorMap: Record<ColorKey, string> = {
  blue: "rgba(59, 130, 246, 0.25)",
  purple: "rgba(168, 85, 247, 0.25)",
  green: "rgba(34, 197, 94, 0.25)",
  gray: "rgba(156, 163, 175, 0.25)",
  white: "rgba(255, 255, 255, 0.15)",
};
---

<div class="interactive-skills-container">
  <div class="flex flex-wrap justify-center gap-4 mb-8">
    <button
      class="filter-btn px-4 py-2 rounded-full border border-white/10 bg-white/5 hover:bg-white/10 transition-all duration-300 text-sm font-medium active"
      data-filter="all"
    >
      Todos
    </button>
    {
      skillCategories.map((cat) => (
        <button
          class={`filter-btn px-4 py-2 rounded-full border border-white/10 bg-white/5 hover:bg-${cat.color}-500/20 hover:border-${cat.color}-500/50 transition-all duration-300 text-sm font-medium`}
          data-filter={cat.id}
          data-color={cat.color}
        >
          {cat.name}
        </button>
      ))
    }
  </div>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4" id="skills-grid">
    {
      skillCategories.flatMap((cat) =>
        cat.skills.map((skill) => (
          <div
            class={`skill-card group relative p-4 rounded-xl border border-white/10 bg-black/40 backdrop-blur-sm hover:scale-105 transition-all duration-300 cursor-default overflow-hidden spotlight-card`}
            data-category={cat.id}
            data-color={cat.color}
            style={`--spotlight-color: ${colorMap[cat.color] || colorMap.purple}`}
          >
            <div
              class={`absolute inset-0 opacity-0 group-hover:opacity-20 transition-opacity duration-300 bg-${cat.color}-500`}
            />

            <div class="relative z-10 flex flex-col items-center text-center gap-2">
              <img
                src={`https://cdn.simpleicons.org/${skill.icon}/${cat.color === "white" ? "000" : "fff"}`}
                alt={skill.name}
                class="w-8 h-8 transition-transform duration-300 group-hover:scale-110"
                loading="lazy"
              />
              <span class="text-sm font-medium text-gray-200 group-hover:text-white transition-colors">
                {skill.name}
              </span>
            </div>
          </div>
        )),
      )
    }
  </div>
</div>

<script>
  const filterBtns = document.querySelectorAll(".filter-btn");
  const skillCards = document.querySelectorAll(".skill-card");

  filterBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      filterBtns.forEach((b) => {
        b.classList.remove("active", "bg-white/20", "scale-105");
        b.classList.add("bg-white/5");
      });
      btn.classList.add("active", "bg-white/20", "scale-105");
      btn.classList.remove("bg-white/5");

      const filter = btn.getAttribute("data-filter");

      skillCards.forEach((card) => {
        const cardCat = card.getAttribute("data-category");
        const htmlCard = card as HTMLElement;

        if (filter === "all" || filter === cardCat) {
          htmlCard.style.display = "flex";
          htmlCard.animate(
            [
              { transform: "scale(0.9)", opacity: 0 },
              { transform: "scale(1)", opacity: 1 },
            ],
            {
              duration: 300,
              easing: "ease-out",
            },
          );
        } else {
          htmlCard.style.display = "none";
        }
      });
    });
  });
</script>

<style>
  .filter-btn.active {
    border-color: rgba(255, 255, 255, 0.5);
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
  }
</style>
