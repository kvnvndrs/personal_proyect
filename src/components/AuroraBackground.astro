---
// Aurora Borealis animated background
---

<div class="aurora-container">
    <div class="aurora aurora-1"></div>
    <div class="aurora aurora-2"></div>
    <div class="aurora aurora-3"></div>
</div>

<style>
    .aurora-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -5;
        pointer-events: none;
    }

    .aurora {
        position: absolute;
        width: 200%;
        height: 200%;
        opacity: 0.15;
        filter: blur(80px);
        animation: aurora-move 20s ease-in-out infinite;
    }

    .aurora-1 {
        background: radial-gradient(
            ellipse at 20% 30%,
            rgba(168, 85, 247, 0.4),
            transparent 50%
        );
        animation-duration: 25s;
        animation-delay: 0s;
    }

    .aurora-2 {
        background: radial-gradient(
            ellipse at 80% 70%,
            rgba(59, 130, 246, 0.3),
            transparent 50%
        );
        animation-duration: 30s;
        animation-delay: -10s;
    }

    .aurora-3 {
        background: radial-gradient(
            ellipse at 50% 50%,
            rgba(236, 72, 153, 0.25),
            transparent 50%
        );
        animation-duration: 35s;
        animation-delay: -20s;
    }

    @keyframes aurora-move {
        0%,
        100% {
            transform: translate(-10%, -10%) rotate(0deg);
        }
        25% {
            transform: translate(-5%, -15%) rotate(5deg);
        }
        50% {
            transform: translate(-15%, -5%) rotate(-5deg);
        }
        75% {
            transform: translate(-8%, -12%) rotate(3deg);
        }
    }
</style>
