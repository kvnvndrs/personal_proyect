---
import Icon from './Icon.astro';

const projects = [
  {
    icon: 'Shield',
    title: 'Security Audit Platform',
    description: 'Plataforma automatizada para auditorías de seguridad con análisis de vulnerabilidades en tiempo real y generación de informes de compliance.',
    tags: ['Python', 'Docker', 'Kubernetes', 'AWS'],
    status: 'DEPLOYED',
    color: 'text-cyber-primary',
    border: 'border-cyber-primary/50'
  },
  {
    icon: 'Lock',
    title: 'Zero Trust Network',
    description: 'Implementación de arquitectura Zero Trust con autenticación multifactor, microsegmentación y monitoreo continuo de accesos.',
    tags: ['Terraform', 'Azure', 'Identity Management', 'SIEM'],
    status: 'ACTIVE',
    color: 'text-cyber-secondary',
    border: 'border-cyber-secondary/50'
  },
  {
    icon: 'Server',
    title: 'DevSecOps Pipeline',
    description: 'Pipeline CI/CD completo con análisis de seguridad estático y dinámico, escaneo de contenedores y políticas de compliance automatizadas.',
    tags: ['Jenkins', 'GitLab CI', 'SonarQube', 'Trivy'],
    status: 'OPTIMIZED',
    color: 'text-cyber-accent',
    border: 'border-cyber-accent/50'
  },
  {
    icon: 'Eye',
    title: 'Threat Detection System',
    description: 'Sistema de detección de amenazas basado en machine learning para identificar patrones anómalos y respuesta automatizada a incidentes.',
    tags: ['Python', 'ELK Stack', 'Machine Learning', 'API'],
    status: 'BETA',
    color: 'text-white',
    border: 'border-white/50'
  },
  {
    icon: 'Lock',
    title: 'Data Encryption Service',
    description: 'Servicio de cifrado de extremo a extremo para datos en reposo y en tránsito, con gestión de claves y rotación automatizada.',
    tags: ['Go', 'Vault', 'HSM', 'Cryptography'],
    status: 'SECURE',
    color: 'text-cyber-primary',
    border: 'border-cyber-primary/50'
  },
  {
    icon: 'Shield',
    title: 'Compliance Dashboard',
    description: 'Dashboard centralizado para monitoreo de compliance con GDPR, ISO 27001 y SOC 2, con alertas en tiempo real y reportes automatizados.',
    tags: ['React', 'Node.js', 'PostgreSQL', 'GraphQL'],
    status: 'LIVE',
    color: 'text-cyber-secondary',
    border: 'border-cyber-secondary/50'
  },
];
---

<div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 py-20">
  <div class="max-w-7xl mx-auto w-full">
    <div class="text-center mb-16 scroll-reveal">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-cyber-secondary/30 bg-cyber-secondary/5 text-cyber-secondary text-xs font-mono mb-4">
        <span>// MISSION_LOGS</span>
      </div>
      <h2 class="text-4xl sm:text-5xl font-bold text-white">
        Proyectos <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyber-primary to-cyber-secondary">Clasificados</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project, index) => (
        <div class="project-card group relative" style={`--delay: ${index * 0.1}s`}>
          <div class="relative h-full p-6 bg-cyber-gray/50 backdrop-blur-sm border border-cyber-slate rounded-lg hover:border-cyber-secondary/50 transition-all duration-300 overflow-hidden">
            <!-- Corner Accents -->
            <div class="absolute top-0 right-0 w-8 h-8 border-t-2 border-r-2 border-cyber-secondary/20 rounded-tr-lg group-hover:border-cyber-secondary/80 transition-colors"></div>
            <div class="absolute bottom-0 left-0 w-8 h-8 border-b-2 border-l-2 border-cyber-secondary/20 rounded-bl-lg group-hover:border-cyber-secondary/80 transition-colors"></div>
            
            <div class="flex justify-between items-start mb-4">
              <div class={`w-12 h-12 bg-cyber-dark border ${project.border} rounded-lg flex items-center justify-center`}>
                <Icon name={project.icon.toLowerCase()} class={`w-6 h-6 ${project.color}`} />
              </div>
              <span class="text-xs font-mono text-slate-500 border border-slate-800 px-2 py-1 rounded bg-cyber-dark">
                [{project.status}]
              </span>
            </div>

            <h3 class="text-xl font-bold text-white mb-3 font-mono group-hover:text-cyber-secondary transition-colors">
              {project.title}
            </h3>
            <p class="text-slate-400 mb-4 text-sm leading-relaxed">
              {project.description}
            </p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 bg-cyber-dark border border-cyber-slate rounded text-xs font-mono text-cyber-primary/80">
                  {tag}
                </span>
              ))}
            </div>

            <div class="flex gap-3 pt-4 border-t border-cyber-slate mt-auto">
              <button class="flex items-center gap-2 text-sm font-mono text-cyber-secondary hover:text-white transition-colors">
                <Icon name="externalLink" class="w-4 h-4" />
                ACCESS
              </button>
              <button class="flex items-center gap-2 text-sm font-mono text-slate-400 hover:text-white transition-colors">
                <Icon name="github" class="w-4 h-4" />
                SOURCE
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .scroll-reveal {
    animation: scrollReveal 0.8s ease-out;
  }

  @keyframes scrollReveal {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .project-card {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .project-card:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease-out;
  }
</style>
