---
const currentTime = new Date().toLocaleTimeString();
---

<div class="fixed top-0 left-0 w-full z-50 bg-cyber-dark/90 border-b border-cyber-primary/30 backdrop-blur-sm px-4 py-2 text-xs font-mono text-cyber-primary flex justify-between items-center">
  <div class="flex gap-4">
    <span class="animate-pulse">‚óè SYSTEM ONLINE</span>
    <span>MEM: <span id="mem-usage">64</span>%</span>
    <span>NET: SECURE</span>
  </div>
  <div class="flex gap-4">
    <span id="clock">{currentTime}</span>
    <span>UID: GUEST_USER</span>
  </div>
</div>

<nav class="fixed bottom-0 left-0 w-full z-50 bg-cyber-dark/90 border-t border-cyber-primary/30 backdrop-blur-sm px-4 py-4 text-sm font-mono text-cyber-primary flex justify-center gap-8">
  <a href="#about" class="hover:text-cyber-secondary hover:bg-cyber-primary/10 px-2 py-1 transition-colors group">
    <span class="opacity-50 group-hover:opacity-100 mr-1">[</span>ABOUT<span class="opacity-50 group-hover:opacity-100 ml-1">]</span>
  </a>
  <a href="#projects" class="hover:text-cyber-secondary hover:bg-cyber-primary/10 px-2 py-1 transition-colors group">
    <span class="opacity-50 group-hover:opacity-100 mr-1">[</span>PROJECTS<span class="opacity-50 group-hover:opacity-100 ml-1">]</span>
  </a>
  <a href="#skills" class="hover:text-cyber-secondary hover:bg-cyber-primary/10 px-2 py-1 transition-colors group">
    <span class="opacity-50 group-hover:opacity-100 mr-1">[</span>SKILLS<span class="opacity-50 group-hover:opacity-100 ml-1">]</span>
  </a>
  <a href="#contact" class="hover:text-cyber-secondary hover:bg-cyber-primary/10 px-2 py-1 transition-colors group">
    <span class="opacity-50 group-hover:opacity-100 mr-1">[</span>CONTACT<span class="opacity-50 group-hover:opacity-100 ml-1">]</span>
  </a>
</nav>

<script>
  // Update clock
  setInterval(() => {
    const clock = document.getElementById('clock');
    if (clock) clock.innerText = new Date().toLocaleTimeString();
  }, 1000);

  // Randomize memory usage
  setInterval(() => {
    const mem = document.getElementById('mem-usage');
    if (mem) mem.innerText = Math.floor(Math.random() * 30 + 40).toString();
  }, 2000);
</script>
